{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "plugins": [
      { "transform": "transform", "transformType": ".js" },
      { "transform": "transform", "afterDeclarations": true, "transformType": ".d.ts" }
    ]
  },
  "include": ["**/*.ts"]
}
